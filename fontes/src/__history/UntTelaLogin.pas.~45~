unit UntTelaLogin;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics, Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls,
  Vcl.ExtCtrls, Vcl.Imaging.pngimage, Vcl.Buttons,
  UntBasSistema,
  Funcoes,
  UntTelaBase00;


type
  TFrmTelaLogin = class(TFrmTelaBase00)
    Image1: TImage;
    LblVersaoExecutavel: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    EdtSenha: TEdit;
    EdtUsuario: TEdit;
    Image2: TImage;
    Image3: TImage;
    BtnFechar: TBitBtn;
    BtnLogin: TBitBtn;
    procedure FormShow(Sender: TObject);
    procedure BtnFecharClick(Sender: TObject);
    procedure BtnLoginClick(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
  private
    { Private declarations }
  public
    { Public declarations }

    class procedure AbreTelaLogin;
  end;

implementation

{$R *.dfm}
{ TFrmTelaLogin }



class procedure TFrmTelaLogin.AbreTelaLogin;
var
  FrmTelaLogin: TFrmTelaLogin;
begin
  FrmTelaLogin := TFrmTelaLogin.Create(nil);
  try
    FrmTelaLogin.ShowModal;

  finally
    if (Assigned(FrmTelaLogin)) then
      FreeAndNil(FrmTelaLogin);
  end;

end;



procedure TFrmTelaLogin.BtnLoginClick(Sender: TObject);
begin
  inherited;
  Sistema.Logado:= True;
  Close;
end;



procedure TFrmTelaLogin.BtnFecharClick(Sender: TObject);
begin
  inherited;
  Close;
  Application.Terminate;
end;



procedure TFrmTelaLogin.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  inherited;
  if (not(Sistema.Logado)) then
    Application.Terminate
end;



procedure TFrmTelaLogin.FormShow(Sender: TObject);
begin
  LblVersaoExecutavel.Caption:=
    TFuncoes.FormatarDescricaoVersaoExecutavel;
end;



end.
