unit UntBasSistema;

interface

uses
  Records;

type
  TSistema = class
  private
    FLogado: Boolean;
  public
    // Controla as dimensões para abrir as telas na area de trabalho
    // do sistema
    DimencoesAberturaTela: TDimencoesAberturaTela;


    property Logado: Boolean read FLogado write FLogado;
  end;

var
  Sistema: TSistema;

implementation


initialization
  Sistema:= TSistema.Create;

end.
